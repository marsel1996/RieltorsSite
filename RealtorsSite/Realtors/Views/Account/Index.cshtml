@model Realtors.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SectionHead
{

}
@section SectionContent
{
<div style=" width: 100%;
                                      height: 100%;
                                      position: relative;
                                      padding-top: 20px;
                                      padding-bottom: 40px;">

    <div class="my-caption">
        <h1>Авторизация</h1>
    </div>
    <div style="position: relative">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "FromFORM" }))
        {
            <div class="validation-summary-errors" data-valmsg-summary="true" style="color:#ea2b30; margin-left: 50px;margin: 1px auto;font-size: 16px;
         width: 300px; text-align: left;">
                @Html.ValidationSummary()
            </div>
            <div style="margin: 1px auto;     width: 600px; position: relative;">
                <div class="panel-body">
                    <div class="form-group" style="text-align: left">
                        <h4>
                            <label for="Login">Логин:</label>
                        </h4>
                        @Html.TextBoxFor(m => m.UserName, new
                        {
                            id = "Login",
                            @class = "input_first input-validation-error form-group form-control",
                            data_val_required = "Пожалуйста, введите логин",
                            data_val = "true",
                            style = "    font-size: 16px;"
                        })
                    </div>
                    <div class="form-group" style="text-align: left">
                        <h4>
                            <label for="Password">Пароль:</label>
                        </h4>
                        @Html.PasswordFor(m => m.Password, new
                        {
                            id = "Password",
                            @class = "input_first input-validation-error form-group form-control",
                            data_val_required = "Пожалуйста, введите пароль",
                            data_val = "true",
                            style = "    font-size: 16px;"
                        })
                    </div>
                    <div style="position: relative;height: 60px;">
                        <input type="submit" value="Войти" id="Enter" class="btn form-group btn-primary pull-right" style="font-size: 18px;" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>

}